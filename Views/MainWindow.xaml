<Window x:Class="BL5_PRN212_MustPass_Project.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Shop Accessories Management" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="#2196F3" Padding="15">
            <Grid>
                <TextBlock Text="{Binding WelcomeMessage}" 
                           Foreground="White" FontSize="16" 
                           FontWeight="SemiBold"/>
                <Button Content="Logout" 
                        Command="{Binding LogoutCommand}"
                        HorizontalAlignment="Right"
                        Padding="15,5" Background="#FF5722" 
                        Foreground="White" BorderThickness="0"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Side Menu -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="#F5F5F5" BorderBrush="#E0E0E0" 
                BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <Button Content="Users" 
                        Command="{Binding ShowUsersCommand}"
                        Visibility="{Binding CanAccessUsers, Converter={StaticResource BoolToVisibilityConverter}}"
                        Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Categories" 
                        Command="{Binding ShowCategoriesCommand}"
                        Visibility="{Binding CanAccessCategories, Converter={StaticResource BoolToVisibilityConverter}}"
                        Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Products" 
                        Command="{Binding ShowProductsCommand}"
                        Visibility="{Binding CanAccessProducts, Converter={StaticResource BoolToVisibilityConverter}}"
                        Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Customers" 
                        Command="{Binding ShowCustomersCommand}"
                        Visibility="{Binding CanAccessCustomers, Converter={StaticResource BoolToVisibilityConverter}}"
                        Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Orders" 
                        Command="{Binding ShowOrdersCommand}"
                        Visibility="{Binding CanAccessOrders, Converter={StaticResource BoolToVisibilityConverter}}"
                        Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="My Orders" 
                        Command="{Binding ShowMyOrdersCommand}"
                        Visibility="{Binding CanAccessMyOrders, Converter={StaticResource BoolToVisibilityConverter}}"
                        Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="My Profile" 
                        Command="{Binding ShowMyProfileCommand}"
                        Visibility="{Binding CanAccessMyProfile, Converter={StaticResource BoolToVisibilityConverter}}"
                        Style="{StaticResource MenuButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Row="1" Grid.Column="1" 
                        Content="{Binding CurrentView}"
                        Margin="10"/>
    </Grid>
</Window>
